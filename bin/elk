#!/usr/bin/env ruby

begin
  require 'elk'
rescue LoadError
  $LOAD_PATH.unshift "#{File.dirname(__FILE__)}/../lib/"
  $LOAD_PATH.unshift "#{File.dirname(__FILE__)}/../lib/elk/"
  require 'elk'
end

elk_project = Elk::Project.new(ARGV[0])
elk_project.create_top_level_dir
elk_project.create_gemfile
elk_project.create_lib_dir
